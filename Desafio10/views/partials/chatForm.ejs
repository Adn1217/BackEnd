<div class="col-md-6">
    <label for="apellido" class="form-label">Apellido</label>
    <input type="text" class="form-control" id="userLastname" placeholder="Ingrese Apellido">
</div>
<div class="col-md-3">
    <label for="age" class="form-label">Edad</label>
    <input type="number" min="0" max="99" class="form-control" id="userAge" placeholder="Edad">
</div>
<div class="col-md-6">
    <label for="alias" class="form-label">Alias</label>
    <input type="text" class="form-control" id="userAlias" placeholder="Ingrese Alias">
</div>
<div class="col-md-6">
    <label for="avatar" class="form-label">Avatar</label>
    <input type="text" class="form-control" id="userAvatar" placeholder="Ingrese Avatar URL">
</div>
<div class="col-md-8">
    <label for="msj" class="form-label">Mensaje</label>
    <input type="text" class="form-control" id="msgInput" placeholder="Ingrese Mensaje">
</div>
<div>
    <button id="addMsgButton" type="button" class="btn btn-primary" >Agregar</button>
    <button id="sendMsgButton" type="button" class="btn btn-primary" >Enviar</button>
